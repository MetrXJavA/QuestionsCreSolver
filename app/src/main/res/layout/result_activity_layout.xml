<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/result_activity_layout_questionNubmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_result_answer_box"
        android:text=""
        android:textSize="32dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#707070"
        android:fontFamily="@font/allerta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/result_activity_layout_yourAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_result_answer_box"
                android:fontFamily="@font/allerta"
                android:gravity="center"
                android:text=""
                android:textColor="#707070"
                android:textSize="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/result_activity_layout_ProgressBarUserAnswer"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/result_activity_layout_yourAnswer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/result_activity_layout_yourAnswer"
                app:layout_constraintTop_toTopOf="@+id/result_activity_layout_yourAnswer" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/result_activity_layout_correctAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_result_answer_box"
                android:fontFamily="@font/allerta"
                android:gravity="center"
                android:text=""
                android:textColor="#707070"
                android:textSize="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/result_activity_layout_ProgressBarCorrectAnswer"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/result_activity_layout_correctAnswer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/result_activity_layout_correctAnswer"
                app:layout_constraintTop_toTopOf="@+id/result_activity_layout_correctAnswer" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>



</LinearLayout>