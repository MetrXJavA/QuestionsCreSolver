<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.ResetPassActivity">


    <EditText
        android:id="@+id/ResetPassEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_constraintWidth_percent=".9"
        android:hint="Write email"
        android:padding="18dp"
        android:textSize="24dp"
        android:textColor="#707070"
        android:fontFamily="@font/allerta"
        android:background="@drawable/sign_in_edit_text_back"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please write quizick email. We will send email for your password."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/ResetPassSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/ResetPassEditText"
        app:layout_constraintStart_toStartOf="@+id/ResetPassEditText"
        app:layout_constraintTop_toBottomOf="@+id/ResetPassEditText"
        app:srcCompat="@drawable/next_button_background" />

</androidx.constraintlayout.widget.ConstraintLayout>