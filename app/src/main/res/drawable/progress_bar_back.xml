<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/progress_bar_back_background">

        <shape android:shape="rectangle">

            <corners android:radius="15dp"></corners>
            <solid android:color="#50FF8F8F"></solid>
        </shape>

    </item>

    <item android:id="@+id/progress_bar_back_forwardground">

        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">

                <corners android:radius="15dp"></corners>
                <solid android:color="#FFFF8F8F"></solid>
            </shape>
        </scale>



    </item>


</layer-list>